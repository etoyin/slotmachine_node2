<body data-barba="container" data-barba-namespace="landing_page" class="bg-[url('/png/landing.png')] bg-cover">
    <!-- remove or comment unused configs before publish -->
    <main class="absolute top-0 left-0 flex flex-col items-center justify-center w-full backdrop-blur-sm bg-black/10">
        <div class="w-full p-2 mt-20 text-center sm:w-3/4 lg:w-1/2">
            <h2 class="text-3xl font-bold text-yellow-400 sm:text-7xl">Win Big!</h2>
            <h3 class="my-3 text-4xl font-semibold text-white">
                Play for <span class="text-5xl font-bold text-green-600 uppercase">FREE</span>
            </h3>
            <h3 class="text-3xl text-white">No Deposit Needed!</h3>

            <div class="w-full p-5 mx-auto my-5 text-white bg-black border-4 border-yellow-400 rounded shadow animate-pulse shadow-yellow-400 sm:w-2/3 bg-opacity-70">
                <h4 class="text-2xl font-semibold ">Collect your Daily Spins for a Chance to Win the</h4>
                <h4 class="my-2 text-2xl font-semibold">
                    <span class="text-xl font-bold text-yellow-400 sm:text-4xl">$1,000,000</span> Jackpot!
                </h4>
                <p class="my-5 text-lg ">Sign up and start playing now!</p>
                <div class="">
                    <div class="flex items-center gap-4">
                        <i class="text-3xl lar la-envelope "></i>
                        <form action="/register" method="post" class="w-full">
                            <input required id="email" name="email" type="email" class="w-full p-2 bg-gray-600 bg-opacity-40" placeholder="Enter your email">
                        </form>
                    </div>
                    <div id="submit" class="text-xl p-3 mt-5 font-semibold hover:font-bold capitalize bg-green-600 rounded-full cursor-pointer hover:bg-green-800"> Get your free spins</div>
                </div>
            </div>

            <div class="relative w-full h-64 mx-auto my-8 bg-yellow-400 border-4 border-yellow-600 rounded shadow shadow-xl shadow-yellow-400 sm:w-2/3 rotate-3">
                <div class="p-10"><i class="text-3xl text-yellow-600 las la-star-of-life sm:text-6xl"></i></div>
                <h4 class="absolute w-full mx-auto my-2 text-2xl font-semibold bottom-5">
                    <span class="text-6xl font-bold">$1,000,000</span> <br> Jackpot!
                </h4>
            </div>

            <div class="relative w-full h-64 p-5 mx-auto my-8 text-white bg-purple-900 border-2 border-purple-600 rounded shadow bg-opacity-70 sm:w-2/3">
                <p class="text-xl font-semibold text-center">How to Win:</p>
                <ol class="flex flex-col gap-2 p-4 text-left list-decimal" type="1">
                    <li>Sign up with your email</li>
                    <li>Collect your daily free spins</li>
                    <li>Spin the reels on our exciting slot machines</li>
                    <li>Match the winning symbols</li>
                    <li>Celebrate your massive $1,000,000 win!</li>
                </ol>
            </div>
        </div>
    </main>
    <script>
        const validateEmail = (email) => {
            return String(email)
            .toLowerCase()
            .match(
            /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|.(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
        };
        $(document).ready(function(){

            // const element = document.querySelector('.shadow-md');

            // setInterval(()=>{

            // },1000)

            // // To show the shadow:
            // element.classList.add('shadow-xl');

            // // To hide the shadow:
            // element.classList.remove('shadow-xl');
            
            fetch('/track-visit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    // Unique identifier, e.g., a UUID
                    identifier: ''
                })
            })
            .then(response => {
                // Handle the response, if necessary
                return response.json();
            })
            .then(res => {
                console.log(res);
                
            })
            .catch(error => {
                console.error('Error tracking visit:', error);
            });

            $("#submit").click(function(){
                let email = $("#email").val();
                $(this).text("Loading...")

                if(validateEmail(email)){

                    fetch('/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            email
                        })
                        })
                    .then(response => response.json())
                    .then(data => {
                        console.log(data);
                        if(data.success){
                            localStorage.setItem('user_id', JSON.stringify(data.results.insertId));
                            window.location.replace("/home");
                        }
                        else{
                            //window.location.replace("/");
                        }
                        console.log(data);
                        $(this).text("Get your free spins");
                        
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                    
                    // $.post("/register", {
                    //     body: JSON.stringify(email)
                    // }, function(result){
                    //     console.log(result);
                    // });
                }
                else{
                    alert("Incorrect email!");
                    $(this).text("Get your free spins");
                }
            })


        })
    </script>
