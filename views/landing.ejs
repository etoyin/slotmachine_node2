    <script>
        const validateEmail = (email) => {
            return String(email)
            .toLowerCase()
            .match(
            /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|.(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
        };
        $(document).ready(function(){

            // const element = document.querySelector('.shadow-md');

            // setInterval(()=>{

            // },1000)

            // // To show the shadow:
            // element.classList.add('shadow-xl');

            // // To hide the shadow:
            // element.classList.remove('shadow-xl');
            
            fetch('/track-visit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    // Unique identifier, e.g., a UUID
                    identifier: ''
                })
            })
            .then(response => {
                // Handle the response, if necessary
                return response.json();
            })
            .then(res => {
                console.log(res);
                
            })
            .catch(error => {
                console.error('Error tracking visit:', error);
            });

            $("#submit").click(function(){
                let email = $("#email").val();

                if(validateEmail(email)){

                    fetch('/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            email
                        })
                        })
                    .then(response => response.json())
                    .then(data => {
                        if(data.success){
                            localStorage.setItem('user_id', JSON.stringify(data.data.insertId));
                            window.location.replace("/home");
                        }
                        else{
                            window.location.replace("/");
                        }
                        console.log(data);
                        
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                    
                    // $.post("/register", {
                    //     body: JSON.stringify(email)
                    // }, function(result){
                    //     console.log(result);
                    // });
                }
                else{
                    alert("Incorrect email!");
                }
            })


        })
    </script>
